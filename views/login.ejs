<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School ERP Login</title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="container">
        <div class="login-container">
            <h2>School ERP Login</h2>
            <div class="button-group">
                <button id="teacher-login-btn" class="toggle-btn active">Login as Teacher</button>
                <button id="admin-login-btn" class="toggle-btn">Login as Admin</button>  
            </div>
            <form id="login-form" action="/auth/login" method="post">
                <div class="input-group">
                    <label for="email" >Email</label>
                    <input type="email" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="input-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                </div>
                
                <!-- Hidden input to capture role (admin or teacher) -->
                <input type="hidden" id="role" name="role" value="teacher">

                <button type="submit" class="login-btn">Login</button>
            </form>
        </div>
    </div>

    <script>
        const teacherBtn = document.getElementById('teacher-login-btn');
        const adminBtn = document.getElementById('admin-login-btn');
        const roleInput = document.getElementById('role');

        // Handle toggle between teacher and admin login
        teacherBtn.addEventListener('click', () => {
            teacherBtn.classList.add('active');
            adminBtn.classList.remove('active');
            roleInput.value = 'teacher';  // Set role to teacher
        });

        adminBtn.addEventListener('click', () => {
            adminBtn.classList.add('active');
            teacherBtn.classList.remove('active');
            roleInput.value = 'admin';  // Set role to admin
        });
    </script>
</body>
</html>